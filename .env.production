# Production Environment Variables
# Copy this to .env and fill in your production values

# Database
DATABASE_URL=postgresql://safevault:your-db-password@localhost:5432/safevault

# Security
SECRET_KEY=your-super-secure-jwt-secret-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Redis Cache
REDIS_URL=redis://localhost:6379

# Monitoring
GRAFANA_PASSWORD=your-grafana-password

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/safevault.crt
SSL_KEY_PATH=/etc/ssl/private/safevault.key